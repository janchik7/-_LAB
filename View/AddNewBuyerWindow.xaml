<Window x:Class="IKM1.View.AddNewBuyerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IKM1.View"
        mc:Ignorable="d"
        Title="AddNewBuyerWindow" Height="200" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" >
            <TextBlock Text="ФИО"/>
            <TextBox Text="{Binding FullName}"/>
            <TextBlock Text="Телефон"/>
            <TextBox Text="{Binding Phone}"/>
            <TextBlock Text="Бюджет"/>
            <TextBox Text="{Binding Budget}"/>
            <Button Command="{Binding AddNewBuyer}" Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Window>
